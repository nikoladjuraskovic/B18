@model IEnumerable<B18.Models.Prognoza>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Maksimalne temperature</h3>
<hr />

<table class="table">

    <tr>

        <th>Sifra</th>
        <th>NazivMesta</th>
        <th>MaxTemperatura</th>

    </tr>

