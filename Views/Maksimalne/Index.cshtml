    @foreach (var item in Model)
    {
        <tr>

            <td>@Html.DisplayFor(modelItem => item.Mesto)</td>
            <td>@Html.ActionLink(item.NazivMesta, "Details", "Maksimalne", new { id = item.Id }, new { @class = "", style = "text-decoration: none" })</td>
            <td>@Html.DisplayFor(modelItem => item.MaxTemperatura)</td>
        </tr>


    }


